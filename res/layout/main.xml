		android:id="@+id/btn_entrar_raio" >
	</Button>
	<RadioButton 
		android:text="@+string/str_street" 
		android:checked="true"
		android:id="@+botoes/rbtnStreet" 
		android:layout_width="wrap_content" 
		android:textColor="#000000"
		android:layout_height="wrap_content">
	</RadioButton>
	<RadioButton 
		android:text="@+string/str_satelite" 
		android:id="@+botoes/rbtnSatel" 
		android:layout_width="wrap_content" 
