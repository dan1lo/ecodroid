	android:background="@drawable/ecodroid">
	
	<Button 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:text="Busca por cidade"
		android:id="@+id/btn_entrar" >
	</Button>
	<Button 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
